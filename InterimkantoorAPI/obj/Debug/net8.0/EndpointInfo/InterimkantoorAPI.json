            "minLength": 1,
            "type": "string"
          },
          "huisnummer": {
            "type": "integer",
            "format": "int32"
          },
          "bankrekeningnummer": {
            "minLength": 1,
            "type": "string"
          },
          "klantJobs": {
            "type": "array",
            "items": {
